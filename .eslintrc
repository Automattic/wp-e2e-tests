{
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"mocha": true,
		"node": true,
	    "browser": true
	},
	"ecmaFeatures": {
		"modules": true
	},
	"rules": {
		"brace-style": [ 2, "1tbs" ],
		// REST API objects include underscores
		"camelcase": 0,
		"comma-dangle": 0,
		"comma-spacing": 2,
		// Allows returning early as undefined
		"consistent-return": 0,
		"dot-notation": 2,
		"eqeqeq": [ 2, "allow-null" ],
		"eol-last": 2,
		"indent": [ 2, "tab", { "SwitchCase": 1 } ],
		"key-spacing": 2,
		"new-cap": [ 2, { "capIsNew": false, "newIsCap": true } ],
		"no-cond-assign": 2,
		"no-else-return": 2,
		"no-empty": 2,
		// Flux stores use switch case fallthrough
		"no-fallthrough": 0,
		"no-lonely-if": 2,
		"no-mixed-requires": 0,
		"no-mixed-spaces-and-tabs": 2,
		"no-multiple-empty-lines": [ 2, { "max": 2 } ],
		"no-multi-spaces": 2,
		"no-nested-ternary": 2,
		"no-new": 2,
		"no-process-exit": 2,
		"no-shadow": 2,
		"no-spaced-func": 2,
		"no-trailing-spaces": 2,
		"no-undef": 2,
		"no-underscore-dangle": 0,
		// Allows Chai `expect` expressions
		"no-unused-expressions": 0,
		"no-unused-vars": 2,
		// Allows function use before declaration
		"no-use-before-define": [ 2, "nofunc" ],
		// We split external, internal, module variables
		"one-var": 0,
		"operator-linebreak": [ 2, "after", { "overrides": {
			"?": "before",
			":": "before"
		} } ],
		"padded-blocks": [ 2, "never" ],
		"quote-props": [ 2, "as-needed" ],
		"quotes": [ 2, "single", "avoid-escape" ],
		"semi-spacing": 2,
		"semi": 2,
		"no-extra-semi": 2,
		"keyword-spacing": [ 2, { "after": true } ],
		"space-before-blocks": [ 2, "always" ],
		"space-before-function-paren": [ 2, "never" ],
		// Our array literal index exception violates this rule
		"space-in-brackets": 0,
		"space-in-parens": [ 2, "always" ],
		"space-infix-ops": [ 2, { "int32Hint": false } ],
		// Ideal for "!" but not for "++"
		"space-unary-ops": 0,
		// Assumed by default with Babel
		"strict": [ 2, "never" ],
		"valid-jsdoc": [ 2, { "requireReturn": false } ],
		// Common top-of-file requires, expressions between external, interal
		"vars-on-top": 2,
		"yoda": 0
	}
}
